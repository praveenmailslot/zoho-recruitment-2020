
#include <stdio.h>
#include<string.h>


int main()
{
  char a[50];
  scanf("%s",a);
  int len=0,i,j,mid,k=0;
  len=strlen(a);
  mid=(len/2);
  k=len-1;int r;
  int b=mid;
  
  for(i=0;i<len;i++)
  {
      for(j=len;j<=0;j--)
      {
         printf(" "); 
      }
      
      if(mid<=len-1)
      {
          for(r=0;r<=i;r++)
          {
              printf("%c",a[b+r]);
          }
          printf("\n"); 
          mid++;
      }
      else
      {
          for(r=b;r<len;r++)
          {
              printf("%c",a[r]);
          }
          for(r=0;r<b;r++)
          {
              
              printf("%c",a[r]);
          }
          printf("\n");
      }
      
  }
  
  

    return 0;
}
